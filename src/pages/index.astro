  <style>
    main {
      background: linear-gradient(135deg, #e0c3fc 0%, #8ec5fc 100%);
      min-height: 100vh;
      padding: 40px 0;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }
    
    /* Badge */
    .badge-container {
      text-align: center;
      margin-bottom: 30px;
      animation: bounce 2s infinite;
    }
    
    .badge {
      display: inline-block;
      background: linear-gradient(135deg, #ffd700, #ff8c00);
      color: #000;
      padding: 12px 30px;
      border-radius: 50px;
      font-weight: bold;
      font-size: 16px;
      box-shadow: 0 10px 30px rgba(255, 140, 0, 0.4);
    }
    
    /* Hero */
    .hero {
      text-align: center;
      margin-bottom: 50px;
    }
    
    .main-title {
      font-size: 3.5rem;
      font-weight: 900;
      background: linear-gradient(135deg, #667eea, #764ba2);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 20px;
      line-height: 1.2;
    }
    
    .subtitle {
      font-size: 1.5rem;
      color: #2d3748;
      margin-bottom: 30px;
      font-weight: 600;
      max-width: 800px;
      margin-left: auto;
      margin-right: auto;
    }
    
    .highlight {
      color: #764ba2;
      font-weight: bold;
    }
    
    .features {
      display: flex;
      justify-content: center;
      gap: 20px;
      flex-wrap: wrap;
      margin-bottom: 20px;
    }
    
    .feature-item {
      background: white;
      padding: 10px 20px;
      border-radius: 25px;
      font-weight: bold;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    
    /* Content Section (Book + Form) */
    .content-section {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 50px;
      margin-bottom: 60px;
      align-items: start;
    }
    
    /* Book Preview */
    .book-preview {
      text-align: center;
    }
    
    .book-cover {
      margin-bottom: 30px;
      perspective: 1000px;
    }
    
    .book-image {
      width: 100%;
      max-width: 400px;
      height: auto;
      border-radius: 10px;
      box-shadow: 0 20px 60px rgba(0,0,0,0.3);
      transition: transform 0.3s;
    }
    
    .book-image:hover {
      transform: rotateY(-5deg) rotateX(5deg) scale(1.05);
    }
    
    /* Placeholder if no image */
    .book-placeholder {
      width: 100%;
      max-width: 400px;
      height: 550px;
      margin: 0 auto;
      background: linear-gradient(135deg, #667eea, #764ba2);
      border-radius: 10px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      color: white;
      box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    }
    
    .book-title {
      font-size: 3rem;
      font-weight: 900;
      margin-bottom: 10px;
    }
    
    .book-subtitle {
      font-size: 1.5rem;
      margin-bottom: 30px;
    }
    
    .book-icon {
      font-size: 5rem;
    }
    
    .book-stats {
      display: flex;
      justify-content: center;
      gap: 40px;
      flex-wrap: wrap;
    }
    
    .stat-item {
      text-align: center;
    }
    
    .stat-number {
      font-size: 2rem;
      font-weight: 900;
      color: #667eea;
    }
    
    .stat-label {
      font-size: 0.9rem;
      color: #718096;
      margin-top: 5px;
    }
    
    /* Form Section */
    .form-section {
      background: white;
      padding: 40px;
      border-radius: 20px;
      box-shadow: 0 20px 60px rgba(0,0,0,0.15);
    }
    
    .form-title {
      font-size: 2rem;
      font-weight: bold;
      color: #2d3748;
      margin-bottom: 10px;
      text-align: center;
    }
    
    .form-subtitle {
      color: #718096;
      margin-bottom: 30px;
      text-align: center;
    }
    
    /* Trust Signals */
    .trust-signals {
      display: flex;
      justify-content: center;
      gap: 40px;
      flex-wrap: wrap;
      margin: 40px 0;
      padding: 20px;
      background: rgba(255,255,255,0.5);
      border-radius: 15px;
    }
    
    .trust-item {
      display: flex;
      align-items: center;
      gap: 10px;
      color: #2d3748;
      font-weight: 600;
    }
    
    .trust-icon {
      font-size: 1.5rem;
    }
    
    /* What's Inside */
    .whats-inside-section {
      margin: 80px 0;
    }
    
    .section-title {
      text-align: center;
      font-size: 2.5rem;
      color: #2d3748;
      margin-bottom: 50px;
      font-weight: bold;
    }
    
    .chapters-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 25px;
    }
    
    .chapter-card {
      background: white;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
      transition: transform 0.3s, box-shadow 0.3s;
    }
    
    .chapter-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 40px rgba(102, 126, 234, 0.2);
    }
    
    .chapter-number {
      font-size: 3rem;
      font-weight: 900;
      color: #667eea;
      opacity: 0.3;
      margin-bottom: 10px;
    }
    
    .chapter-card h3 {
      font-size: 1.3rem;
      color: #2d3748;
      margin-bottom: 10px;
    }
    
    .chapter-card p {
      color: #718096;
      line-height: 1.6;
      font-size: 0.95rem;
    }
    
    /* Benefits */
    .benefits-section {
      margin: 80px 0;
    }
    
    .benefits-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 30px;
    }
    
    .benefit-card {
      background: white;
      padding: 40px;
      border-radius: 20px;
      text-align: center;
      box-shadow: 0 10px 40px rgba(0,0,0,0.1);
      transition: transform 0.3s, box-shadow 0.3s;
      border-top: 5px solid #667eea;
    }
    
    .benefit-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 20px 50px rgba(102, 126, 234, 0.3);
    }
    
    .benefit-icon {
      font-size: 4rem;
      margin-bottom: 20px;
    }
    
    .benefit-card h3 {
      font-size: 1.5rem;
      margin-bottom: 15px;
      color: #2d3748;
    }
    
    .benefit-card p {
      color: #718096;
      line-height: 1.8;
    }
    
    /* Testimonials */
    .testimonials-section {
      margin: 80px 0;
    }
    
    .testimonials-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 30px;
    }
    
    .testimonial-card {
      background: white;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    
    .stars {
      color: #fbbf24;
      font-size: 1.2rem;
      margin-bottom: 15px;
    }
    
    .testimonial-text {
      color: #4a5568;
      line-height: 1.7;
      font-style: italic;
      margin-bottom: 15px;
    }
    
    .testimonial-author {
      color: #718096;
      font-weight: bold;
      font-size: 0.9rem;
    }
    
    /* Final CTA */
    .final-cta {
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: white;
      padding: 60px 40px;
      border-radius: 20px;
      text-align: center;
      margin: 80px 0;
      box-shadow: 0 20px 60px rgba(102, 126, 234, 0.4);
    }
    
    .cta-title {
      font-size: 2.5rem;
      font-weight: 900;
      margin-bottom: 15px;
    }
    
    .cta-subtitle {
      font-size: 1.2rem;
      margin-bottom: 40px;
      opacity: 0.9;
    }
    
    .cta-button-container {
      margin-bottom: 20px;
    }
    
    .cta-button {
      display: inline-block;
      background: white;
      color: #667eea;
      padding: 20px 50px;
      border-radius: 50px;
      font-weight: 900;
      font-size: 1.2rem;
      text-decoration: none;
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
      transition: transform 0.3s, box-shadow 0.3s;
    }
    
    .cta-button:hover {
      transform: translateY(-3px);
      box-shadow: 0 15px 40px rgba(0,0,0,0.3);
    }
    
    .cta-note {
      font-size: 0.9rem;
      opacity: 0.8;
    }
    
    /* Animations */
    @keyframes bounce {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }
    
    /* Responsive */
    @media (max-width: 968px) {
      .content-section {
        grid-template-columns: 1fr;
        gap: 30px;
      }
      
      .main-title {
        font-size: 2.5rem;
      }
      
      .subtitle {
        font-size: 1.2rem;
      }
      
      .trust-signals {
        flex-direction: column;
        gap: 15px;
      }
      
      .cta-title {
        font-size: 2rem;
      }
    }
    
    @media (max-width: 768px) {
      .main-title {
        font-size: 2rem;
      }
      
      .subtitle {
        font-size: 1.1rem;
      }
      
      .features {
        flex-direction: column;
        align-items: center;
      }
      
      .form-section {
        padding: 25px;
      }
    }
  </style>
</Layout>