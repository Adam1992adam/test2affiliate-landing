    .container {
      max-width: 900px;
      margin: 0 auto;
      padding: 0 20px;
    }
    
    /* Success Section */
    .success-container {
      text-align: center;
      margin-bottom: 50px;
    }
    
    .checkmark-circle {
      width: 100px;
      height: 100px;
      background: #10b981;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 30px;
      animation: scaleIn 0.5s ease-out;
      box-shadow: 0 10px 40px rgba(16, 185, 129, 0.4);
    }
    
    .checkmark {
      color: white;
      font-size: 60px;
      font-weight: bold;
    }
    
    .success-title {
      font-size: 3rem;
      color: white;
      margin-bottom: 30px;
      font-weight: 900;
      text-shadow: 0 4px 20px rgba(0,0,0,0.2);
    }
    
    .success-box {
      background: white;
      border-radius: 20px;
      padding: 40px;
      margin-bottom: 30px;
      box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    }
    
    .success-message {
      font-size: 1.8rem;
      color: #2d3748;
      margin-bottom: 15px;
      font-weight: bold;
    }
    
    .success-subtitle {
      font-size: 1.2rem;
      color: #4a5568;
      margin-bottom: 10px;
    }
    
    .success-note {
      font-size: 1rem;
      color: #718096;
    }
    
    .info-badges {
      display: flex;
      justify-content: center;
      gap: 20px;
      flex-wrap: wrap;
    }
    
    .info-badge {
      background: rgba(255, 255, 255, 0.9);
      padding: 12px 24px;
      border-radius: 25px;
      display: flex;
      align-items: center;
      gap: 8px;
      font-weight: bold;
      color: #2d3748;
      box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    
    .badge-icon {
      font-size: 1.5rem;
    }
    
    /* Offer Section */
    .offer-section {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border-radius: 25px;
      padding: 50px;
      text-align: center;
      box-shadow: 0 30px 80px rgba(0,0,0,0.4);
      border: 3px solid rgba(255,255,255,0.2);
      margin-bottom: 40px;
    }
    
    .offer-badge {
      display: inline-block;
      background: #fbbf24;
      color: #000;
      padding: 12px 30px;
      border-radius: 25px;
      font-weight: bold;
      margin-bottom: 25px;
      box-shadow: 0 5px 20px rgba(251, 191, 36, 0.5);
      animation: pulse 2s infinite;
    }
    
    .offer-title {
      font-size: 2.5rem;
      color: white;
      margin-bottom: 20px;
      font-weight: 900;
    }
    
    .offer-subtitle {
      font-size: 1.3rem;
      color: rgba(255,255,255,0.9);
      margin-bottom: 40px;
    }
    
    .features-list {
      background: rgba(255,255,255,0.15);
      backdrop-filter: blur(10px);
      border-radius: 15px;
      padding: 30px;
      margin-bottom: 30px;
      text-align: right;
    }
    
    .feature {
      display: flex;
      align-items: center;
      gap: 15px;
      margin-bottom: 15px;
      font-size: 1.1rem;
      color: white;
    }
    
    .feature:last-child {
