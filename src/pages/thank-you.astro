      color: white;
      text-decoration: none;
      font-weight: bold;
      font-size: 1.1rem;
      transition: opacity 0.3s;
    }
    
    .back-home a:hover {
      opacity: 0.8;
    }
    
    /* Animations */
    @keyframes scaleIn {
      from {
        transform: scale(0);
        opacity: 0;
      }
      to {
        transform: scale(1);
        opacity: 1;
      }
    }
    
    @keyframes pulse {
      0%, 100% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.05);
      }
    }
    
    /* Responsive */
    @media (max-width: 768px) {
      .success-title {
